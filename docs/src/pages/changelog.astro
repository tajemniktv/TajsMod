---
import BaseLayout from "../layouts/BaseLayout.astro";
import { changelog } from "../data/changelog";
import PageActions from "../components/PageActions.astro";

const entries = changelog;
---

<BaseLayout
  title="Changelog"
  description="See what's new in each version of Taj's Mod. Complete release history with added features, changes, and bug fixes."
>
  <!-- Header -->
  <section
    class="bg-gradient-to-b from-gray-100 to-gray-50 dark:from-dark-900 dark:to-dark-950 pt-12 pb-8"
  >
    <div class="container-wide text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Changelog</h1>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-lg">
        Complete release history with all changes, additions, and fixes.
      </p>
      <div class="flex items-center justify-center gap-4 mt-6">
        <a
          href={`${import.meta.env.BASE_URL}/feed.xml`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white font-medium rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"
            ></path>
          </svg>
          Subscribe via RSS
        </a>
        <span class="text-sm text-gray-500 dark:text-gray-500">
          üìÑ Parsed from <code
            class="px-1.5 py-0.5 bg-gray-100 dark:bg-dark-700 rounded"
            >CHANGELOG.md</code
          >
        </span>
      </div>
    </div>
  </section>

  <!-- Changelog Content -->
  <section class="section">
    <div class="container-narrow">
      <div class="space-y-8">
        {
          entries.map((entry, index) => (
            <article class="card" id={`v${entry.version}`}>
              <div class="flex flex-wrap items-center gap-3 mb-4">
                <span class="px-3 py-1 bg-accent-500 text-white font-bold rounded-lg">
                  v{entry.version}
                </span>
                <span class="text-gray-500 dark:text-gray-400 text-sm">
                  {entry.date}
                </span>
                {index === 0 && (
                  <span class="px-2 py-0.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs font-medium rounded-full">
                    Latest
                  </span>
                )}
              </div>

              <div class="space-y-4">
                {entry.added && entry.added.length > 0 && (
                  <div>
                    <h3 class="text-sm font-semibold text-green-600 dark:text-green-400 uppercase tracking-wider mb-2">
                      ‚ú® Added
                    </h3>
                    <ul class="space-y-1">
                      {entry.added.map((item) => (
                        <li class="text-gray-700 dark:text-gray-300 text-sm pl-4 relative before:content-['‚Ä¢'] before:absolute before:left-0 before:text-gray-400">
                          {item}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}

                {entry.changed && entry.changed.length > 0 && (
                  <div>
                    <h3 class="text-sm font-semibold text-blue-600 dark:text-blue-400 uppercase tracking-wider mb-2">
                      üîÑ Changed
                    </h3>
                    <ul class="space-y-1">
                      {entry.changed.map((item) => (
                        <li class="text-gray-700 dark:text-gray-300 text-sm pl-4 relative before:content-['‚Ä¢'] before:absolute before:left-0 before:text-gray-400">
                          {item}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}

                {entry.removed && entry.removed.length > 0 && (
                  <div>
                    <h3 class="text-sm font-semibold text-red-600 dark:text-red-400 uppercase tracking-wider mb-2">
                      üóëÔ∏è Removed
                    </h3>
                    <ul class="space-y-1">
                      {entry.removed.map((item) => (
                        <li class="text-gray-700 dark:text-gray-300 text-sm pl-4 relative before:content-['‚Ä¢'] before:absolute before:left-0 before:text-gray-400">
                          {item}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}

                {entry.fixed && entry.fixed.length > 0 && (
                  <div>
                    <h3 class="text-sm font-semibold text-amber-600 dark:text-amber-400 uppercase tracking-wider mb-2">
                      üêõ Fixed
                    </h3>
                    <ul class="space-y-1">
                      {entry.fixed.map((item) => (
                        <li class="text-gray-700 dark:text-gray-300 text-sm pl-4 relative before:content-['‚Ä¢'] before:absolute before:left-0 before:text-gray-400">
                          {item}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </article>
          ))
        }
      </div>

      <!-- View on GitHub -->
      <div class="text-center mt-12">
        <a
          href="https://github.com/TajemnikTV/TajsMod/releases"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          View All Releases on GitHub
        </a>
      </div>

      <!-- Page Actions -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-dark-700">
        <PageActions editPath="/changelog.astro" />
      </div>
    </div>
  </section>
</BaseLayout>
