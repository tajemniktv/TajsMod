---
import BaseLayout from "../../layouts/BaseLayout.astro";
import LinkCard from "../../components/LinkCard.astro";

// Starlight docs are served directly at /documentation/ (not /docs/documentation/)
const docSections = [
  {
    title: "Getting Started",
    description: "Quick installation guide and first steps",
    href: `${import.meta.env.BASE_URL}/documentation/installation-and-configuration/`,
    icon: "üöÄ",
  },
  {
    title: "Core Architecture",
    description: "Understanding how Taj's Mod works under the hood",
    href: `${import.meta.env.BASE_URL}/documentation/core-architecture/`,
    icon: "üèóÔ∏è",
  },
  {
    title: "Configuration System",
    description: "How to configure and customize the mod",
    href: `${import.meta.env.BASE_URL}/documentation/configuration-system/`,
    icon: "‚öôÔ∏è",
  },
  {
    title: "Command Palette",
    description: "Deep dive into the Command Palette system",
    href: `${import.meta.env.BASE_URL}/documentation/command-palette-system/`,
    icon: "‚å®Ô∏è",
  },
  {
    title: "Command Definitions",
    description: "How commands are defined and registered",
    href: `${import.meta.env.BASE_URL}/documentation/command-definitions-and-registry/`,
    icon: "üìã",
  },
  {
    title: "Contributing Guidelines",
    description: "How to contribute to the project",
    href: `${import.meta.env.BASE_URL}/documentation/contributing-guidelines/`,
    icon: "ü§ù",
  },
];
---

<BaseLayout
  title="Documentation"
  description="Documentation hub for Taj's Mod. Guides, architecture docs, and contribution guidelines."
>
  <!-- Header -->
  <section
    class="bg-gradient-to-b from-gray-100 to-gray-50 dark:from-dark-900 dark:to-dark-950 pt-12 pb-8"
  >
    <div class="container-wide text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Documentation</h1>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-lg">
        Everything you need to know about using and contributing to Taj's Mod.
      </p>
    </div>
  </section>

  <!-- Quick Start -->
  <section class="section">
    <div class="container-wide">
      <div class="max-w-4xl mx-auto mb-16">
        <div
          class="card bg-accent-50 dark:bg-accent-950/20 border-accent-200 dark:border-accent-800"
        >
          <div class="flex items-start gap-4">
            <div class="text-4xl">üöÄ</div>
            <div>
              <h2 class="text-xl font-semibold mb-2">Quick Start</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                New to Taj's Mod? Getting started takes less than a minute.
              </p>
              <ol
                class="list-decimal list-inside space-y-2 text-gray-700 dark:text-gray-300 mb-4"
              >
                <li>
                  <strong>Subscribe</strong> on the <a
                    href="https://steamcommunity.com/sharedfiles/filedetails/?id=3628222709"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-accent-500 hover:text-accent-600 underline"
                    >Steam Workshop</a
                  >
                </li>
                <li>
                  <strong>Launch</strong> Upload Labs - the mod loads automatically
                </li>
                <li>
                  <strong>Open settings</strong> via the puzzle piece icon (‚öôÔ∏è) in-game
                </li>
                <li>
                  <strong>Use Command Palette</strong> with MMB or Spacebar for quick
                  actions
                </li>
              </ol>
              <a
                href={`${import.meta.env.BASE_URL}/faq/`}
                class="btn-secondary text-sm"
              >
                Having issues? Check the FAQ
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Documentation Sections -->
      <h2 class="text-2xl font-bold mb-8 text-center">Documentation</h2>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto"
      >
        {
          docSections.map((doc) => (
            <LinkCard
              title={doc.title}
              description={doc.description}
              href={doc.href}
              icon={doc.icon}
            />
          ))
        }
      </div>

      <!-- Full Docs Link -->
      <div class="text-center mt-12">
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          Looking for more detailed technical documentation?
        </p>
        <a
          href={`${import.meta.env.BASE_URL}/documentation/overview/`}
          class="btn-primary inline-flex items-center gap-2"
        >
          <span>üìö</span>
          Browse Full Documentation
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
