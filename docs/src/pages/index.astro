---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import WhatsNewBanner from "../components/WhatsNewBanner.astro";
import TrustBar from "../components/TrustBar.astro";
import VideoSection from "../components/VideoSection.astro";
import FeatureGrid from "../components/FeatureGrid.astro";
import GettingStarted from "../components/GettingStarted.astro";
import FAQAccordion from "../components/FAQAccordion.astro";
import SupportSection from "../components/SupportSection.astro";
import LinkCard from "../components/LinkCard.astro";
import { faq } from "../data/faq";

const previewFAQ = faq.slice(0, 4);

const hubLinks = [
  {
    title: "Documentation",
    description: "In-depth guides and reference for all mod features",
    href: `${import.meta.env.BASE_URL}/docs/`,
    icon: "üìö",
  },
  {
    title: "All Features",
    description: "Explore every feature with search and filtering",
    href: `${import.meta.env.BASE_URL}/features/`,
    icon: "‚ú®",
  },
  {
    title: "FAQ",
    description: "Common questions and troubleshooting tips",
    href: `${import.meta.env.BASE_URL}/faq/`,
    icon: "‚ùì",
  },
  {
    title: "Changelog",
    description: "See what's new in each version",
    href: `${import.meta.env.BASE_URL}/changelog/`,
    icon: "üìã",
  },
  {
    title: "Roadmap",
    description: "Upcoming features and planned improvements",
    href: `${import.meta.env.BASE_URL}/roadmap/`,
    icon: "üó∫Ô∏è",
  },
  {
    title: "Support",
    description: "Ways to support the project and get help",
    href: `${import.meta.env.BASE_URL}/support/`,
    icon: "üíô",
  },
];

const externalLinks = [
  {
    title: "Steam Workshop",
    description: "Subscribe and download the mod",
    href: "https://steamcommunity.com/sharedfiles/filedetails/?id=3628222709",
    icon: "üéÆ",
    external: true,
  },
  {
    title: "GitHub Repository",
    description: "Source code, issues, and contributions",
    href: "https://github.com/TajemnikTV/TajsMod",
    icon: "üíª",
    external: true,
  },
  {
    title: "Discord Community",
    description: "Chat with the community and get support",
    href: "https://discord.gg/enigmadev",
    icon: "üí¨",
    external: true,
  },
];
---

<BaseLayout title="Home">
  <!-- Hero -->
  <Hero />

  <!-- What's New Banner -->
  <WhatsNewBanner />

  <!-- Trust Bar -->
  <TrustBar />

  <!-- Video Section -->
  <VideoSection />

  <!-- Feature Highlights -->
  <FeatureGrid />

  <!-- Getting Started -->
  <GettingStarted />

  <!-- Hub Navigation -->
  <section class="section bg-white dark:bg-dark-900">
    <div class="container-wide">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Explore the Hub</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Everything you need to know about Taj's Mod in one place
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {
          hubLinks.map((link) => (
            <LinkCard
              title={link.title}
              description={link.description}
              href={link.href}
              icon={link.icon}
            />
          ))
        }
      </div>

      <div class="border-t border-gray-200 dark:border-dark-700 pt-12">
        <h3 class="text-xl font-semibold text-center mb-6">External Links</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          {
            externalLinks.map((link) => (
              <LinkCard
                title={link.title}
                description={link.description}
                href={link.href}
                icon={link.icon}
                external={link.external}
              />
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Preview -->
  <section class="section bg-gray-50 dark:bg-dark-950">
    <div class="container-wide">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Frequently Asked Questions
        </h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Quick answers to common questions
        </p>
      </div>

      <div class="max-w-3xl mx-auto">
        <FAQAccordion items={previewFAQ} />

        <div class="text-center mt-8">
          <a
            href={`${import.meta.env.BASE_URL}/faq/`}
            class="btn-secondary inline-flex items-center gap-2"
          >
            View All FAQ
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Support Section -->
  <SupportSection />
</BaseLayout>
