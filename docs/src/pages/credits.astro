---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageActions from "../components/PageActions.astro";

const BASE_URL = import.meta.env.BASE_URL;

const credits = {
  creator: {
    name: "TajemnikTV",
    role: "Creator & Lead Developer",
    links: [{ name: "GitHub", url: "https://github.com/TajemnikTV" }],
  },
  acknowledgments: [
    {
      name: "Upload Labs Developers",
      reason: "Creating an amazing game with mod support",
    },
    { name: "EnigmaDev Community", reason: "Testing, feedback, and support" },
    {
      name: "Steam Workshop Users",
      reason: "Using the mod and providing feedback",
    },
  ],
  technologies: [
    { name: "Godot Engine", url: "https://godotengine.org/" },
    { name: "Astro", url: "https://astro.build/" },
    { name: "Tailwind CSS", url: "https://tailwindcss.com/" },
  ],
};
---

<BaseLayout
  title="Credits & License"
  description="Acknowledgments, credits, and licensing information for Taj's Mod."
>
  <!-- Header -->
  <section
    class="bg-gradient-to-b from-gray-100 to-gray-50 dark:from-dark-900 dark:to-dark-950 pt-12 pb-8"
  >
    <div class="container-wide text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Credits & License</h1>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-lg">
        Acknowledgments and licensing information
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container-narrow">
      <!-- Creator -->
      <div class="card mb-8 text-center">
        <div
          class="inline-flex w-20 h-20 rounded-full bg-accent-500/10 items-center justify-center mb-4"
        >
          <span class="text-4xl">üë®‚Äçüíª</span>
        </div>
        <h2 class="text-2xl font-bold mb-1">{credits.creator.name}</h2>
        <p class="text-gray-500 dark:text-gray-400 mb-4">
          {credits.creator.role}
        </p>
        <div class="flex justify-center gap-4">
          {
            credits.creator.links.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-accent-500 hover:text-accent-600"
              >
                {link.name} ‚Üí
              </a>
            ))
          }
        </div>
      </div>

      <!-- Acknowledgments -->
      <div class="card mb-8">
        <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
          <span>üôè</span>
          Acknowledgments
        </h2>
        <div class="space-y-4">
          {
            credits.acknowledgments.map((ack) => (
              <div class="flex items-start gap-3">
                <span class="text-accent-500 mt-1">‚ô¶</span>
                <div>
                  <span class="font-medium">{ack.name}</span>
                  <span class="text-gray-500 dark:text-gray-400">
                    {" "}
                    ‚Äî {ack.reason}
                  </span>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Technologies -->
      <div class="card mb-8">
        <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
          <span>üõ†Ô∏è</span>
          Built With
        </h2>
        <div class="flex flex-wrap gap-3">
          {
            credits.technologies.map((tech) => (
              <a
                href={tech.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gray-100 dark:bg-dark-700 hover:bg-gray-200 dark:hover:bg-dark-600 transition-colors"
              >
                {tech.name}
                <svg
                  class="w-4 h-4 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                  />
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      <!-- License -->
      <div class="card">
        <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
          <span>üìú</span>
          License
        </h2>
        <div class="prose dark:prose-invert prose-sm max-w-none">
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Taj's Mod is open source software. The mod code is available under
            the terms specified in the repository.
          </p>

          <div
            class="bg-gray-50 dark:bg-dark-700/50 rounded-lg p-4 font-mono text-sm"
          >
            <p class="mb-2"><strong>MIT License</strong></p>
            <p class="text-gray-500 dark:text-gray-400">
              Copyright (c) 2025 TajemnikTV
            </p>
            <p class="text-gray-500 dark:text-gray-400 mt-2">
              Permission is hereby granted, free of charge, to any person
              obtaining a copy of this software...
            </p>
          </div>

          <p class="mt-4">
            <a
              href="https://github.com/TajemnikTV/TajsMod/blob/main/LICENSE.md"
              target="_blank"
              rel="noopener noreferrer"
              class="text-accent-500 hover:text-accent-600"
            >
              View full license on GitHub ‚Üí
            </a>
          </p>
        </div>
      </div>

      <!-- Contributing Note -->
      <div
        class="mt-8 p-6 bg-accent-500/5 border border-accent-500/20 rounded-xl text-center"
      >
        <h3 class="font-semibold mb-2">Want to Contribute?</h3>
        <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
          Contributions are welcome! Check out the contributing guidelines on
          GitHub.
        </p>
        <a
          href="https://github.com/TajemnikTV/TajsMod/blob/main/CONTRIBUTING.md"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary text-sm"
        >
          Contributing Guidelines
        </a>
      </div>

      <!-- Page Actions -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-dark-700">
        <PageActions editPath="/credits.astro" />
      </div>
    </div>
  </section>
</BaseLayout>
