---
import BaseLayout from "../layouts/BaseLayout.astro";
import CopyButton from "../components/CopyButton.astro";
import PageActions from "../components/PageActions.astro";

// Configurable troubleshooting paths
const troubleshootingConfig = {
  paths: {
    windows: {
      game: "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Upload Labs",
      mods: "C:\\Program Files (x86)\\Steam\\steamapps\\workshop\\content\\3606890",
      config: "%APPDATA%\\Upload Labs\\tajs_mod_config.json",
      logs: "%APPDATA%\\Upload Labs\\logs",
      saves: "%APPDATA%\\Upload Labs\\",
    },
    linux: {
      game: "~/.steam/steam/steamapps/common/Upload Labs",
      mods: "~/.steam/steam/steamapps/workshop/content/3606890",
      config: "~/.config/app_userdata/Upload Labs/tajs_mod_config.json",
      logs: "~/.local/share/app_userdata/Upload Labs/logs",
    },
    mac: {
      game: "?",
      mods: "?",
      config: "?",
    },
  },
};

const BASE_URL = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Troubleshooting"
  description="Diagnostic checklist and common fixes for Taj's Mod issues."
>
  <!-- Header -->
  <section
    class="bg-gradient-to-b from-gray-100 to-gray-50 dark:from-dark-900 dark:to-dark-950 pt-12 pb-8"
  >
    <div class="container-wide text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Troubleshooting</h1>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-lg">
        Diagnostic checklist and quick fixes for common issues
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container-narrow">
      <!-- Quick Diagnosis (Interactive) -->
      <div
        class="card mb-8 bg-amber-50 dark:bg-amber-900/10 border-amber-200 dark:border-amber-800/30"
        id="diagnosis-card"
      >
        <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
          <span>‚ö°</span>
          Quick Diagnosis Checklist
        </h2>
        <div class="space-y-3" id="checklist">
          <label
            class="flex items-start gap-3 cursor-pointer"
            data-check="subscribed"
          >
            <input
              type="checkbox"
              class="diagnosis-check mt-1 h-4 w-4 rounded border-gray-300 accent-accent-500"
            />
            <span>Is the mod subscribed on Steam Workshop?</span>
          </label>
          <label
            class="flex items-start gap-3 cursor-pointer"
            data-check="launched"
          >
            <input
              type="checkbox"
              class="diagnosis-check mt-1 h-4 w-4 rounded border-gray-300 accent-accent-500"
            />
            <span>Have you launched the game after subscribing?</span>
          </label>
          <label
            class="flex items-start gap-3 cursor-pointer"
            data-check="sync"
          >
            <input
              type="checkbox"
              class="diagnosis-check mt-1 h-4 w-4 rounded border-gray-300 accent-accent-500"
            />
            <span>Is Steam Workshop sync enabled?</span>
          </label>
          <label
            class="flex items-start gap-3 cursor-pointer"
            data-check="conflict"
          >
            <input
              type="checkbox"
              class="diagnosis-check mt-1 h-4 w-4 rounded border-gray-300 accent-accent-500"
            />
            <span>Are other mods disabled (to test conflict)?</span>
          </label>
          <label
            class="flex items-start gap-3 cursor-pointer"
            data-check="resub"
          >
            <input
              type="checkbox"
              class="diagnosis-check mt-1 h-4 w-4 rounded border-gray-300 accent-accent-500"
            />
            <span>Have you tried unsubscribing and resubscribing?</span>
          </label>
        </div>

        <!-- Dynamic Guidance -->
        <div id="diagnosis-result" class="mt-6 hidden">
          <div
            id="guidance-subscribed"
            class="hidden p-4 rounded-lg bg-red-100 dark:bg-red-900/20 border border-red-300 dark:border-red-800 mb-3"
          >
            <h4 class="font-semibold text-red-700 dark:text-red-400 mb-2">
              üî¥ Subscribe to the mod first!
            </h4>
            <p class="text-red-600 dark:text-red-300 text-sm">
              Visit the <a
                href="https://steamcommunity.com/sharedfiles/filedetails/?id=3394961814"
                target="_blank"
                class="underline">Steam Workshop page</a
              > and click "Subscribe".
            </p>
          </div>

          <div
            id="guidance-launched"
            class="hidden p-4 rounded-lg bg-yellow-100 dark:bg-yellow-900/20 border border-yellow-300 dark:border-yellow-800 mb-3"
          >
            <h4 class="font-semibold text-yellow-700 dark:text-yellow-400 mb-2">
              üü° Restart the game
            </h4>
            <p class="text-yellow-600 dark:text-yellow-300 text-sm">
              Close Upload Labs completely and launch it again. Steam needs to
              download the Workshop content.
            </p>
          </div>

          <div
            id="guidance-sync"
            class="hidden p-4 rounded-lg bg-yellow-100 dark:bg-yellow-900/20 border border-yellow-300 dark:border-yellow-800 mb-3"
          >
            <h4 class="font-semibold text-yellow-700 dark:text-yellow-400 mb-2">
              üü° Check Steam Workshop settings
            </h4>
            <p class="text-yellow-600 dark:text-yellow-300 text-sm">
              In Steam: Right-click Upload Labs ‚Üí Properties ‚Üí Updates ‚Üí Ensure
              "Always keep this game updated" is selected.
            </p>
          </div>

          <div
            id="guidance-conflict"
            class="hidden p-4 rounded-lg bg-blue-100 dark:bg-blue-900/20 border border-blue-300 dark:border-blue-800 mb-3"
          >
            <h4 class="font-semibold text-blue-700 dark:text-blue-400 mb-2">
              üîµ Test for mod conflicts
            </h4>
            <p class="text-blue-600 dark:text-blue-300 text-sm">
              Disable all other mods and see if Taj's Mod works alone. If it
              does, re-enable mods one by one to find the conflict.
            </p>
          </div>

          <div
            id="guidance-resub"
            class="hidden p-4 rounded-lg bg-blue-100 dark:bg-blue-900/20 border border-blue-300 dark:border-blue-800 mb-3"
          >
            <h4 class="font-semibold text-blue-700 dark:text-blue-400 mb-2">
              üîµ Force refresh Workshop content
            </h4>
            <p class="text-blue-600 dark:text-blue-300 text-sm">
              Unsubscribe from the mod, restart Steam, then subscribe again.
              This forces a fresh download.
            </p>
          </div>

          <div
            id="guidance-all-checked"
            class="hidden p-4 rounded-lg bg-green-100 dark:bg-green-900/20 border border-green-300 dark:border-green-800 mb-3"
          >
            <h4 class="font-semibold text-green-700 dark:text-green-400 mb-2">
              ‚úÖ You've tried everything basic!
            </h4>
            <p class="text-green-600 dark:text-green-300 text-sm">
              If the issue persists, please report it on <a
                href="https://github.com/TajemnikTV/TajsMod/issues/new"
                target="_blank"
                class="underline">GitHub</a
              > or <a
                href="https://discord.gg/enigmadev"
                target="_blank"
                class="underline">Discord</a
              > with your log files.
            </p>
          </div>
        </div>
      </div>

      <script>
        function initDiagnosis() {
          const checks = document.querySelectorAll(".diagnosis-check");
          const resultDiv = document.getElementById("diagnosis-result");

          function updateGuidance() {
            const states = {
              subscribed: !document.querySelector(
                '[data-check="subscribed"] input'
              ).checked,
              launched: !document.querySelector('[data-check="launched"] input')
                .checked,
              sync: !document.querySelector('[data-check="sync"] input')
                .checked,
              conflict: !document.querySelector('[data-check="conflict"] input')
                .checked,
              resub: !document.querySelector('[data-check="resub"] input')
                .checked,
            };

            const allChecked = Object.values(states).every((v) => !v);
            const anyUnchecked = Object.values(states).some((v) => v);

            // Show result section if any state applies
            resultDiv.classList.toggle("hidden", !anyUnchecked && !allChecked);

            // Toggle individual guidance boxes
            document
              .getElementById("guidance-subscribed")
              .classList.toggle("hidden", !states.subscribed);
            document
              .getElementById("guidance-launched")
              .classList.toggle(
                "hidden",
                states.subscribed || !states.launched
              );
            document
              .getElementById("guidance-sync")
              .classList.toggle(
                "hidden",
                states.subscribed || states.launched || !states.sync
              );
            document
              .getElementById("guidance-conflict")
              .classList.toggle("hidden", !states.conflict);
            document
              .getElementById("guidance-resub")
              .classList.toggle("hidden", !states.resub);
            document
              .getElementById("guidance-all-checked")
              .classList.toggle("hidden", !allChecked);
          }

          checks.forEach((check) =>
            check.addEventListener("change", updateGuidance)
          );
          updateGuidance();
        }

        document.addEventListener("astro:page-load", initDiagnosis);
        initDiagnosis();
      </script>

      <!-- Important Paths -->
      <div class="card mb-8">
        <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
          <span>üìÇ</span>
          Important Paths (Windows)
        </h2>
        <div class="space-y-4">
          {
            Object.entries(troubleshootingConfig.paths.windows).map(
              ([key, path]) => (
                <div class="flex flex-col sm:flex-row sm:items-center gap-2">
                  <span class="font-medium text-gray-700 dark:text-gray-300 min-w-[100px] capitalize">
                    {key}:
                  </span>
                  <code class="flex-1 text-sm bg-gray-100 dark:bg-dark-700 px-3 py-1.5 rounded-lg break-all">
                    {path}
                  </code>
                  <CopyButton text={path} />
                </div>
              )
            )
          }
        </div>
        <details class="mt-6">
          <summary
            class="cursor-pointer text-sm text-gray-500 hover:text-gray-700 dark:hover:text-gray-300"
          >
            Show Linux / macOS paths
          </summary>
          <div
            class="mt-4 space-y-4 pl-4 border-l-2 border-gray-200 dark:border-dark-700"
          >
            <h4 class="font-medium text-sm text-gray-500">Linux</h4>
            {
              Object.entries(troubleshootingConfig.paths.linux).map(
                ([key, path]) => (
                  <div class="flex flex-col sm:flex-row sm:items-center gap-2">
                    <span class="text-gray-600 dark:text-gray-400 min-w-[80px] capitalize text-sm">
                      {key}:
                    </span>
                    <code class="flex-1 text-xs bg-gray-100 dark:bg-dark-700 px-2 py-1 rounded break-all">
                      {path}
                    </code>
                    <CopyButton text={path} />
                  </div>
                )
              )
            }
            <h4 class="font-medium text-sm text-gray-500 mt-4">macOS</h4>
            {
              Object.entries(troubleshootingConfig.paths.mac).map(
                ([key, path]) => (
                  <div class="flex flex-col sm:flex-row sm:items-center gap-2">
                    <span class="text-gray-600 dark:text-gray-400 min-w-[80px] capitalize text-sm">
                      {key}:
                    </span>
                    <code class="flex-1 text-xs bg-gray-100 dark:bg-dark-700 px-2 py-1 rounded break-all">
                      {path}
                    </code>
                    <CopyButton text={path} />
                  </div>
                )
              )
            }
          </div>
        </details>
      </div>

      <!-- Common Issues -->
      <div class="card mb-8">
        <h2 class="text-xl font-bold mb-6 flex items-center gap-2">
          <span>üîß</span>
          Common Issues
        </h2>

        <div class="space-y-6">
          <div>
            <h3 class="font-semibold mb-2">
              Mod not loading after subscription
            </h3>
            <ol
              class="list-decimal list-inside space-y-1 text-gray-600 dark:text-gray-400 text-sm"
            >
              <li>Fully close the game and Steam</li>
              <li>Restart Steam to force Workshop sync</li>
              <li>Launch Upload Labs</li>
              <li>Look for the puzzle piece icon (‚öôÔ∏è) in the HUD</li>
            </ol>
          </div>

          <div>
            <h3 class="font-semibold mb-2">Game crashes on startup</h3>
            <ol
              class="list-decimal list-inside space-y-1 text-gray-600 dark:text-gray-400 text-sm"
            >
              <li>Disable all other mods first</li>
              <li>Enable Debug Logging in mod settings (if accessible)</li>
              <li>Check logs folder for error details</li>
              <li>Report the issue with logs attached</li>
            </ol>
          </div>

          <div>
            <h3 class="font-semibold mb-2">Settings not saving</h3>
            <ol
              class="list-decimal list-inside space-y-1 text-gray-600 dark:text-gray-400 text-sm"
            >
              <li>Ensure the game isn't running from a read-only location</li>
              <li>Try running as administrator once</li>
              <li>Use "Reset All Settings" in Debug tab</li>
            </ol>
          </div>
        </div>
      </div>

      <!-- What to Attach -->
      <div
        class="card bg-blue-50 dark:bg-blue-900/10 border-blue-200 dark:border-blue-800/30"
      >
        <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
          <span>üìé</span>
          When Reporting an Issue
        </h2>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          Help us help you! Include these when reporting:
        </p>
        <ul class="space-y-2 text-gray-700 dark:text-gray-300">
          <li class="flex items-start gap-2">
            <span class="text-blue-500">‚úì</span>
            <span><strong>Log files</strong> from the logs folder</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-blue-500">‚úì</span>
            <span><strong>settings.cfg</strong> if settings-related</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-blue-500">‚úì</span>
            <span><strong>Screenshots</strong> of the issue or error</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-blue-500">‚úì</span>
            <span><strong>Steps to reproduce</strong> the problem</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-blue-500">‚úì</span>
            <span><strong>Mod version</strong> (check in mod settings)</span>
          </li>
        </ul>

        <div class="mt-6 flex flex-wrap gap-3">
          <a
            href="https://github.com/TajemnikTV/TajsMod/issues/new"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary text-sm"
          >
            Report on GitHub
          </a>
          <a
            href="https://discord.gg/enigmadev"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary text-sm"
          >
            Ask on Discord
          </a>
        </div>
      </div>

      <!-- Page Actions -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-dark-700">
        <PageActions editPath="/troubleshooting.astro" />
      </div>
    </div>
  </section>
</BaseLayout>
