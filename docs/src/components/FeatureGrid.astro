---
import FeatureCard from "./FeatureCard.astro";
import FeatureModal from "./FeatureModal.astro";
import { getHighlightedFeatures } from "../data/features";

const highlightedFeatures = getHighlightedFeatures();
---

<section class="section bg-white dark:bg-dark-900">
  <div class="container-wide">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Feature Highlights</h2>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Discover what makes Taj's Mod the go-to enhancement for Upload Labs
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {highlightedFeatures.map((feature) => <FeatureCard feature={feature} />)}
    </div>

    <div class="text-center mt-10">
      <a
        href={`${import.meta.env.BASE_URL}/features/`}
        class="btn-secondary inline-flex items-center gap-2"
      >
        See All Features
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>

  <!-- Feature Modal -->
  <FeatureModal />
</section>
