---
/**
 * Page actions: Edit on GitHub, Report Issue links
 */
interface Props {
  editPath?: string;
  githubRepo?: string;
}

const { editPath, githubRepo = "TajemnikTV/TajsMod" } = Astro.props;

const currentPath = Astro.url.pathname;
const editUrl = editPath
  ? `https://github.com/${githubRepo}/edit/main/docs/src/pages${editPath}`
  : null;
const issueUrl = `https://github.com/${githubRepo}/issues/new?title=Feedback%20for%20${encodeURIComponent(currentPath)}&body=%0A%0A---%0APage:%20${encodeURIComponent(currentPath)}`;
---

<div class="flex flex-wrap items-center gap-4 text-sm">
  {
    editUrl && (
      <a
        href={editUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 text-gray-500 hover:text-accent-500 transition-colors"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
          />
        </svg>
        Edit this page
      </a>
    )
  }

  <a
    href={issueUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center gap-1.5 text-gray-500 hover:text-accent-500 transition-colors"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
      ></path>
    </svg>
    Report issue
  </a>
</div>
