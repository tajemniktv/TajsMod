---
interface Props {
  showLogo?: boolean;
}

const { showLogo = true } = Astro.props;
---

<section
  class="relative min-h-[70vh] flex items-center justify-center overflow-hidden"
>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src={`${import.meta.env.BASE_URL}/brand/TajsModHeader.png`}
      alt=""
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-gray-50 dark:to-dark-950"
    >
    </div>
    <!-- Blur overlay at bottom for smooth transition -->
    <div
      class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-gray-50 dark:from-dark-950"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-wide text-center py-20 md:py-32">
    {
      showLogo && (
        <img
          src={`${import.meta.env.BASE_URL}/brand/TajsModLogo.png`}
          alt="Taj's Mod"
          class="w-24 h-24 md:w-32 md:h-32 mx-auto mb-8 rounded-2xl shadow-2xl animate-in"
          loading="eager"
        />
      )
    }

    <h1
      class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 animate-in stagger-1"
    >
      Taj's Mod
    </h1>

    <p
      class="text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto mb-8 animate-in stagger-2"
    >
      A growing collection of <span class="text-accent-400 font-semibold"
        >Utility / QoL</span
      > + <span class="text-accent-400 font-semibold">Visual Tweaks</span> for Upload
      Labs
    </p>

    <p class="text-gray-300 max-w-2xl mx-auto mb-10 animate-in stagger-3">
      Enhance your gameplay without overhauling the core experience. More
      settings, more convenience, more polish â€” without the bloat.
    </p>

    <!-- CTA Buttons -->
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-in stagger-4"
    >
      <a
        href="https://steamcommunity.com/sharedfiles/filedetails/?id=3628222709"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary text-lg px-8 py-4"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 2C6.48 2 2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H8v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95 0-5.52-4.48-10-10-10z"
          ></path>
        </svg>
        Subscribe on Steam
      </a>

      <a
        href="https://github.com/TajemnikTV/TajsMod"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-secondary text-lg px-8 py-4 bg-white/10 hover:bg-white/20 text-white border-white/20"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        View on GitHub
      </a>
    </div>
  </div>
</section>
